<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hasan.adda.LoginActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/login_background_image"
        android:src="@drawable/grass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/login_logo_image"
        android:src="@drawable/camera_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitStart"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <!-- login-in input email  -->
    <EditText
        android:id="@+id/login_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your email address?"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:background="#50111111"
        android:padding="20dp"
        />

    <!-- login-in input email  -->
    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="and your password?"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:background="#70111111"
        android:padding="20dp"
        android:layout_below="@id/login_input_email"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_input_password"
        android:background="#90000000"
        android:layout_marginTop="15dp"
        android:text="Login now"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="20dp"
        />



</RelativeLayout>
