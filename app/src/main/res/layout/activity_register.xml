<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hasan.adda.RegisterActivity">

    <!-- Register Now Header -->
    <TextView
        android:id="@+id/register_text"
        android:text="@string/register_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="80dp"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="#ebedeb"
        />

    <!-- Input Register User Name -->
    <EditText
        android:id="@+id/register_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:layout_below="@id/register_text"
        android:padding="25dp"
        />

    <!-- Input Register User Email -->
    <EditText
        android:id="@+id/register_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:layout_below="@id/register_input_name"
        android:padding="25dp"
        />

    <!-- Input Register User Password -->
    <EditText
        android:id="@+id/register_input_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a password"
        android:layout_below="@id/register_input_email"
        android:padding="25dp"
        />

    <!-- Register Button -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_input_password"
        android:layout_centerHorizontal="true"
        android:text="Register now"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
